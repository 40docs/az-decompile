{
  "name": "az-decompile",
  "version": "1.0.0",
  "description": "Azure Bicep Decompilation Project for FortiGate infrastructure templates",
  "scripts": {
    "lint": "markdownlint-cli2 \"**/*.md\"",
    "lint:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "validate:bicep": "az bicep build --file final/azuredeploy.bicep --stdout > /dev/null",
    "validate": "npm run lint && npm run validate:bicep"
  },
  "keywords": [
    "azure",
    "bicep",
    "arm-templates",
    "fortinet",
    "fortigate",
    "infrastructure",
    "decompilation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/40docs/az-decompile.git"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.13.0"
  }
}
